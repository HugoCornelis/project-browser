#!/usr/bin/perl -w
#!/usr/bin/perl -d:ptkdb -w
#

use strict;


$| = 1;


# BEGIN
# {
#     # during tests

#     push @INC, '../glue/swig/perl';

#     # during distcheck

#     push @INC, '../../glue/swig/perl';

#     # after installation

#     push @INC, '/usr/local/glue/swig/perl';
# }


# BEGIN
# {
#     # for main during tests

#     push @INC, 'tests/glue/swig/perl';

#     # for main during check

#     push @INC, './glue/swig/perl';

#     # for main during distcheck

#     push @INC, '../../tests/glue/swig/perl';
# }


use Getopt::Long;

use YAML;


$SIG{__DIE__}
    = sub {
	use Carp;

	confess @_;
    };


my $option_description;
my $option_name;
my $option_verbose;

my $exit_code = 0;


sub main
{
    read_cmd_line();

    # create internal project

    my $project
	= Neurospaces::Project->new
	    (
	     {
	      description => $option_description,
	      name => $option_name,
	     },
	    );


    # create directory layout

    $project->create();

}


sub read_cmd_line
{
    my $option_help;
    my $option_version;

    my $result
	= GetOptions
	    (
	     "description=s" => \$option_description,
	     "help!" => \$option_help,
	     "name=s" => \$option_name,
	     "v|verbose+" => \$option_verbose,
	     "version" => \$option_version,
	    );

    if ($option_version)
    {
	my $version = version();

	print $version . "\n";

	exit 1;
    }

    if ($option_help)
    {
	print
	    "
$0 <options>

$0: create a new neurospaces project-browser simulation module

options:
    description        one line description of the project.
    help               print usage information.
    name               name of the project.
    verbose            set verbosity level.
    version            give version information.
";

	exit 1;
    }

}


sub version
{
    # $Format: "    my $version=\"${package}-${label}\";"$
    my $version="project-browser-python-2";

    return $version;
}


main();


exit $exit_code;


